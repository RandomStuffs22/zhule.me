- commentable = notification.commentable
- comment = notification.comment
- user = comment.user
.notification
  .icon
    %a{ :href => user_path(user.id), :title => user.login }
      = image_tag user.avatar_url(:c), :size => '50x50'          
  .info
    .detail
      .notify_type
        - unless notification.readed?
          %span.new_notice 新！
        %a{ :href => user_path(user.id) }= user.login 
        评论了你的求助
        %a{ :href => assistance_path(commentable.id) }
          = commentable.content
      .body
        = comment.content
    .bottom_tools
      %abbr.timeago{ :title => notification.created_at }