.assistance_detail
  .content
    = @assist.content
  .tools
    .status
      %span 
        于 3 天前
      %a{ :href => 'javascript:;' }
        %i.icons.icons_map
        北京 朝阳
      %a{ :href => joined_assistance_path(@assist.id) }
        %i.icons.icons_person
        = "参与帮忙(#{@assist.helpers_count})"
      %a{ :href => '#' }
        %i.icons.icons_comt
        = "评论(#{@assist.comments_count})"
      %a{ :href => '#' }
        %i.icons.icons_pencil
        编辑        
    .buttons
      - if current_user != @user || true
        %a.button.helpWhom{ :href => 'javascript:;' } 帮她一把

.i_can_help    
  %textarea.form_text{} 我能帮你：
  %a.button{ :href => '#' } 发送

.participate
  .title
    这些人帮了TA
    %a.action 更多
  .helper_list
    - 8.times do
      .helper_li
        %a{ :href => '#', :title => '热心达人' }
          = image_tag 'demo.jpg', :size => '50x50'
        %i.icons.icons_smile

.comment_panel
  .title
    评论
    %a.action 发表
  .comt_list
    - if @comments.blank?
      %p{ :style => 'margin:10px 10px;' } 暂时没有任何评论...
    - else
      - @comments.each do |comment|
        = render :partial => 'comments/comment', :locals => { :comment => comment }
  .new_comt_form
    %textarea.form_text
    %a.button.postComment{ :href => 'javascript:;', 'data-commentable_id' => @assist.id, 'data-commentable_type' => 'Assistance' } 评论

