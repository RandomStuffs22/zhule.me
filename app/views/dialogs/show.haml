.user_dialog_show
  = form_tag send_message_dialog_path(@dialog.id), :id => 'newMessageForm' do
    .new_message_form
      / .notice
      /   私信
      %textarea.form_text{ :name => 'content' }
      .tools
      %a.button.submit{ :href => 'javascript:;' } 回复 TA

  .message_list
    .title
      = "我 与 #{@dialog.from_user.login} 的私信"
      %a.action
        = "共 #{@dialog.messages_count} 条"
    .message
      - @messages.each do |message|
        .mode{ :class => current_user.id == message.sender_id ? 'right_mode' : 'left_mode' }
          .timeline
            3分钟之前
          .avatar
            = image_tag 'demo.jpg', :size => '30x30'
          .content
            %p
              = message.content
              / %a{ :href => '#' } 删除